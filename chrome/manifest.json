{
  "name": "Cookie Jar",
  "version": "0.1",
  "description": "Sandbox your cookies.",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "icons": {
  	"16": "icons/icon16.png",
  	"48": "icons/icon48.png",
  	"128": "icons/icon128.png"
  },
  "manifest_version": 2
}
